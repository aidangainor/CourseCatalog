<% provide(:title, 'Search') %>
<h1>Search for courses and subject</h1>

<%= form_tag('/search/index', :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search Courses" %>
  <select class="form-control" name="subject">
    <option selected="true" style="display:none;">Select Subject</option>
    <% @subjects.each do |subject| %>
      <option value="<%=subject.id%>"><%= subject.name %></option>
    <% end %>
  </select>
  <%= submit_tag "Search" %>
<% end %>
