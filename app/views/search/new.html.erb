<% provide(:title, 'Search') %>
<h1 >Search for courses and subject</h1>

<%= form_tag('/search/new', :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], id: 'search_field', class: 'form-control', placeholder: "Search Courses" %>


  <select class="form-control" id="dropdown_select" name="subject">
    <option selected="true" style="display:none;">Select Subject</option>
    <% @subjects.each do |subject| %>
      <option value="<%=subject.subject_id%>"><%= subject.name %></option>
    <% end %>
  </select>
  <%= submit_tag "Search" %>

  <div id="classes"> <%= render 'classes' %></div>
<% end %>
